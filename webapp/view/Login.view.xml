<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="ZAHR_PZEBDE.ZAHR_PZEBDE.controller.Login" xmlns:cBtn="ZAHR_PZEBDE.ZAHR_PZEBDE.controller">
	<App class="pzebdeapp">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox width="100%" direction="Column" alignContent="Center" alignItems="Center" id="vBox0">
						<items>
							<Input xmlns="sap.m" id="inputTimeID" placeholder="Ausweisnummer" liveChange="onInputLiveChange" submit="onInputSubmit" required="true"
								type="Password" width="300px" fieldWidth="100%" class="sapUiSmallMarginTop"/>
							<Button xmlns="sap.m" text="{i18n>Login}" press="onLogin" id="buttonLogin" type="Emphasized" width="300px" class="myCustomButton"/>
							<!--<cBtn:CustomBtn text="{i18n>Login}" press="onLogin" id="buttonCustLogin" type="Emphasized" width="300px" height="200px"/>-->
							<Label text="Label" width="100%" id="labelDateTime" design="Bold" class="lblDateTime"/>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>